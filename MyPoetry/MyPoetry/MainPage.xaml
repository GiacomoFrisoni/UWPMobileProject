    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Background="{StaticResource AppColor1}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="HamburgerButton" Grid.Column="0" Width="48" Height="48" Click="HamburgerButton_Click" Style="{StaticResource ButtonBlue}">
                <TextBlock Text="&#xE700;" FontFamily="Segoe MDL2 Assets"/>
            </Button>

            <TextBlock Name="TxblTitle" Grid.Column="1" Margin="10, 0" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="White" VerticalAlignment="Center" Text="Some Page Title Text"></TextBlock>
        </Grid>

        <SplitView Grid.Row="1" x:Name="NavigationPane">
            <SplitView.Pane>
                <RelativePanel x:Name="MenuContainer" Background="{StaticResource AppColor3}">
                    <ListView Grid.Row="0" 
                          SelectionChanged="MenuList_SelectionChanged"
                          x:Name="MenuList"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.Above="BottomMenu"
                          RelativePanel.AlignTopWithPanel="True"
                          SelectionMode="Single" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                          ScrollViewer.VerticalScrollMode="Enabled" 
                          ItemsSource="{Binding Source={StaticResource cvs}}" 
                          HorizontalContentAlignment="Stretch" 
                          HorizontalAlignment="Stretch">
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderContainerStyle>
                                    <Style TargetType="ListViewHeaderItem">
                                        <Setter Property="MinHeight" Value="10"></Setter>
                                        <Setter Property="MaxHeight" Value="10"></Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewHeaderItem">
                                                    <Rectangle Stroke="{StaticResource AppColor5}"
                                                               StrokeThickness="0.5"
                                                               Height="1"
                                                               VerticalAlignment="Bottom"
                                                               HorizontalAlignment="Stretch"
                                                               Margin="5,8,5,0"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>

                                    </Style>
                                </GroupStyle.HeaderContainerStyle>
                            </GroupStyle>
                        </ListView.GroupStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="Container">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <SymbolIcon Grid.Column="0" x:Name="Icon" Foreground="White" Width="48" Height="48" Symbol="{Binding Path=ItemIcon}"></SymbolIcon>
                                    <TextBlock Grid.Column="1" x:Name="Text" Foreground="White" Margin="4, 0, 16, 0" Text="{Binding Path=ItemText}" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <StackPanel BorderBrush="{StaticResource AppColor3}" BorderThickness="0, 2, 0, 0" x:Name="BottomMenu" Grid.Row="2" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                        <menu:MenuItemViewer ItemIcon="Setting" ItemText="Impostazioni" ItemStyle="{StaticResource ButtonBlue}"></menu:MenuItemViewer>
                        <menu:MenuItemViewer ItemIcon="Admin" ItemText="Logout" ItemStyle="{StaticResource ButtonRed}"></menu:MenuItemViewer>
                    </StackPanel>
                </RelativePanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid Name="GrdParent">
                    <Image Stretch="UniformToFill" Source="Assets/background.png"/>
                    <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Sample content"></TextBlock>
                </Grid>
            </SplitView.Content>
        </SplitView>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- VisualState to be triggered when window width is >=640 and <=1007 effective pixels -->
                <VisualState x:Name="Large">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="650" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavigationPane.DisplayMode"
                                Value="CompactOverlay" />
                        <Setter Target="NavigationPane.IsPaneOpen"
                                Value="False" />
                    </VisualState.Setters>
                </VisualState>

                <!-- VisualState to be triggered when window width is >=0 and <641 effective pixels -->
                <VisualState x:Name="Small">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Collapse the SplitView pane into overlay mode -->
                        <Setter Target="NavigationPane.DisplayMode"
                                Value="Overlay" />
                        <Setter Target="NavigationPane.IsPaneOpen"
                                Value="False" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>




    </Grid>
</Page>
