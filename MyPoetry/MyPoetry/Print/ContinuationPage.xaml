<Page
    x:Class="MyPoetry.ContinuationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyPoetry"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="PrintableArea">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <RichTextBlockOverflow x:Name="ContinuationPageLinkedContainer" Grid.Row="0" Grid.Column="0" />
        <StackPanel x:Name="Footer" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Visibility="Collapsed">
            <Image Source="ms-appx:///Assets/logo_print.png" Stretch="UniformToFill" Height="30" Width="30" Margin="5,5,10,5"/>
            <RichTextBlock Foreground="Black" FontSize="16" TextAlignment="Left" FontFamily="Segoe UI" VerticalAlignment="Center">
                <Paragraph>Printed with MyPoetry</Paragraph>
            </RichTextBlock>
        </StackPanel>
    </Grid>
</Page>