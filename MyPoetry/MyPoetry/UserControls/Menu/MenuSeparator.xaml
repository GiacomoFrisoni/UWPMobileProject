<UserControl
    x:Class="MyPoetry.UserControls.Menu.MenuSeparator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyPoetry.UserControls.Menu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400">

    <Border BorderBrush="White" BorderThickness="0, 0, 0, 1" Margin="0, 10, 0, 5">
        <TextBlock x:Name="Text" Foreground="White" Text="{Binding Key}" Typography.Capitals="SmallCaps" VerticalAlignment="Center"/>
    </Border>
</UserControl>
