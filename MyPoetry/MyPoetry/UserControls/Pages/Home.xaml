<UserControl
    x:Class="MyPoetry.UserControls.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyPoetry.UserControls.Pages"
    xmlns:custom="using:MyPoetry.UserControls"
    xmlns:converters="using:MyPoetry.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="ListView_SmallTemplate">
            <Grid Margin="0, 10, 0, 0" Background="{StaticResource AppColor4}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Margin="10,5" BorderBrush="{StaticResource AppColor4Click}" BorderThickness="0, 0, 0, 1">
                    <TextBlock Margin="5" FontSize="18" Text="{Binding Title}"/>
                </Border>

                <TextBlock Margin="10, 5" Grid.Row="1" FontSize="12" Text="{Binding ShortText}"></TextBlock>

                <Border Grid.Row="2" BorderBrush="{StaticResource AppColor4Click}" BorderThickness="0, 1, 0, 0">
                    <Grid Margin="5, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                            <SymbolIcon Margin="5, 0" Symbol="Calendar" Foreground="{StaticResource AppColor6}" VerticalAlignment="Center"></SymbolIcon>
                            <TextBlock Grid.Column="0" Text="12/05/2017" Foreground="{StaticResource AppColor6}" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>


                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Grid.Column="0" FontSize="14" Text="5" Foreground="{StaticResource AppColor6}" VerticalAlignment="Center"></TextBlock>
                            <SymbolIcon Margin="5, 0" Foreground="{StaticResource AppColor6}" Symbol="Favorite"></SymbolIcon>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <!-- 
    
    Ho tolto questa riga di codice dalal listview; se serve mettila!
    
    ItemsSource="{Binding Source={StaticResource poetriesViewSource}}" 
    
    -->
    <custom:CustomPage x:Name="MainContent" Title="Home">
        <custom:CustomPage.MainContent>
            <Grid>
                <ListView
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    Padding="0, 0, 10, 0"
                    Margin="0, 0, 0, 10"
                    Loaded="itemListView_Loaded"
                    x:Name="itemListView"
                    AutomationProperties.AutomationId="ItemsListView"
                    AutomationProperties.Name="Items"
                    ItemTemplate="{Binding Source={StaticResource ListView_SmallTemplate}}"
                    SelectionMode="None"
                    IsSynchronizedWithCurrentItem="False"
                    IsItemClickEnabled="True"
                    IsSwipeEnabled="false">
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource AppColor1}" Margin="5">
                                        <TextBlock Foreground="White" Margin="5" Text="bla" Style="{StaticResource GroupHeaderTextStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <VariableSizedWrapGrid ItemHeight="310" ItemWidth="360" />
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
            </Grid>
        </custom:CustomPage.MainContent>          
    </custom:CustomPage>
</UserControl>
